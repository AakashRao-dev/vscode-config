{
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.fontSize": 20,
  "workbench.colorTheme": "Shades of Purple (Super Dark)",
  // "editor.fontFamily": "cascadia code, monospace",
  // "editor.fontFamily": "MonoLisa",
  "editor.fontFamily": "Inconsolata",
  "editor.inlineSuggest.enabled": true,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.wordWrap": "on",
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": true,
    "html": true,
    "javascript": true
  },
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.host": "localhost",
  "liveServer.settings.port": 3000,
  "emmet.includeLanguages": {
    "javascript": "html"
  },
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "explorer.compactFolders": false,
  "editor.fontSize": 22,
  "editor.lineHeight": 35,
  "editor.letterSpacing": 0.5,
  "files.trimTrailingWhitespace": true,
  "editor.fontWeight": "500",
  "prettier.eslintIntegration": true,
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 3,
  "editor.renderWhitespace": "none",
  // "workbench.colorCustomizations": {
  //
  // },
  "workbench.colorCustomizations": {
    "[Night Owl]": {
      "activityBar.background": "#000C1D",
      "activityBar.border": "#102a44",
      "editorGroup.border": "#102a44",
      "sideBar.background": "#001122",
      "sideBar.border": "#102a44",
      "sideBar.foreground": "#8BADC1",
      "editorCursor.foreground": "#ff9d00",
      "terminalCursor.foreground": "#ff9d00"
    }
  },
  "vsicons.dontShowNewVersionMessage": true,
  "editor.cursorBlinking": "expand",
  "workbench.startupEditor": "none",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // For Tailwind Intelliscense
  "tailwindCSS.includeLanguages": {
    "javascript": "javascript",
    "html": "HTML"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "quokka.showStartViewOnFeatureRelease": false,
  "sass.andStared": ["active", "focus", "hover", "nth-child"],
  "liveSassCompile.settings.formats": [
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "/css"
    },
    {
      "extensionName": ".min.css",
      "format": "compressed",
      "savePath": "/css"
    }
  ],
  // "liveSassCompile.settings.excludeList": ["**/node_modules/**", ".vscode/**"],
  "liveSassCompile.settings.generateMap": true,
  "liveSassCompile.settings.autoprefix": ["> 1%", "last 2 versions"],
  "javascript.updateImportsOnFileMove.enabled": "always",

  "editor.formatOnPaste": true,
  "inlineFold.regex": "(class|className)=[`'{\"]([^`'\"}]{30,})[`'\"}]",
  "inlineFold.regexFlags": "g",
  "inlineFold.regexGroup": 2,
  "inlineFold.unfoldedOpacity": 0.6,
  "inlineFold.maskChar": "â€¦",
  "inlineFold.maskColor": "#000",
  "inlineFold.supportedLanguages": [
    "javascriptreact",
    "typescriptreact",
    "javascript"
  ],
  "inlineFold.unfoldOnLineSelect": true,
  "inlineFold.autoFold": true,
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "editor.tabSize": 2,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.autoIndent": "advanced",
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.formatOnSave": true
  },
  "workbench.tree.indent": 4,
  "liveSassCompile.settings.showOutputWindowOn": "None",
  "editor.multiCursorModifier": "ctrlCmd",
  "workbench.iconTheme": "material-icon-theme",
  "codesnap.showLineNumbers": false,
  "editor.formatOnSave": true,
  "markdown-preview-enhanced.previewColorScheme": "systemColorScheme",
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  "workbench.sideBar.location": "right",
  "editor.stickyScroll.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",
  "redhat.telemetry.enabled": false,
  "terminal.integrated.fontFamily": "Jetbrains Mono",
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": ["-d", "Ubuntu"]
    }
  },
  "files.autoSave": "onFocusChange"
}
